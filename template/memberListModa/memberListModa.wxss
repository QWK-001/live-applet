@import '/style/weui.wxss';

.memberListModa {
    position  : absolute;
    bottom    : 0;
    display   : flex;
    width     : 100%;
    height    : 50%;
    background: rgba(0, 0, 0, 0.7);
    z-index   : 888;
    color     : #ffffff;
}

.weui-tab {
    width: 100%;
}

.mask {
    position: fixed;
    top     : 0;
    left    : 0;
    width   : 100%;
    height  : 50%;
}

.member-list {
    width     : 100%;
    padding   : 20rpx;
    font-size : 15px;
    color     : rgba(255, 255, 255, .8);
    overflow-y: auto
}

.child-view {
    margin : 10px 0;
    padding: 10px 0;
}

.weui-tab__content_member {
    text-align      : center;
    background-color: rgba(0, 0, 0, 0.2);
    position        : absolute;
    width           : 100%;
}